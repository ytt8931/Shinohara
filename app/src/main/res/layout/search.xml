<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0FFFFFFF">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="search"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.475" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:background="#EEE9E8"
        android:gravity="bottom"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:id="@+id/home"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:background="#EEE9E8"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/tohome" />

        <ImageButton
            android:id="@+id/search"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:background="#EEE9E8"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/tosearch" />

        <ImageButton
            android:id="@+id/post"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:background="#EEE9E8"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/topost" />

        <ImageButton
            android:id="@+id/or"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:background="#EEE9E8"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/tooverreading" />

        <ImageButton
            android:id="@+id/library"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:background="#EEE9E8"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/tolibrary" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:background="#EEE9E8"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/tosettings" />

        <View
            android:id="@+id/view6"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="@string/search"
            android:textSize="24sp" />

        <View
            android:id="@+id/view5"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/imageButton6"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:background="#EEE9E8"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/toprofile" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>