<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#EEE9E8"
        android:gravity="bottom"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:id="@+id/home"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="#EEE9E8"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/tohome" />

        <ImageButton
            android:id="@+id/search"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="#EEE9E8"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/tosearch" />

        <ImageButton
            android:id="@+id/post"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="#EEE9E8"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/topost" />

        <ImageButton
            android:id="@+id/or"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="#EEE9E8"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/tooverreading" />

        <ImageButton
            android:id="@+id/library"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="#EEE9E8"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/tolibrary" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#EEE9E8"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/settings"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:background="#EEE9E8"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/tosettings" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/update"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:background="#EEE9E8"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/update_home" />

        <ImageButton
            android:id="@+id/bookmark"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:background="#EEE9E8"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/bookmark" />

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/profile"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:background="#EEE9E8"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/toprofile" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>